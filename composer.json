{
    "name"              : "jbzoo/path",
    "type"              : "library",
    "description"       : "PHP virtual path library",
    "license"           : "MIT",
    "keywords"          : ["url", "jbzoo", "path", "realpath", "filesystem", "virtual path"],
    "authors"           : [
        {
            "name"  : "Denis Smetannikov",
            "email" : "admin@jbzoo.com",
            "role"  : "lead"
        },
        {
            "name"  : "Sergey Kalistratov",
            "email" : "kalistratov.s.m@gmail.com"
        }
    ],

    "require"           : {
        "php"         : ">=7.2",

        "jbzoo/utils" : "^4.2.1",
        "jbzoo/data"  : "^4.0.1"
    },

    "require-dev"       : {
        "jbzoo/toolbox-dev" : "^2.4.0"
    },

    "autoload"          : {
        "psr-4" : {
            "JBZoo\\Path\\" : "src"
        }
    },

    "minimum-stability" : "dev",
    "prefer-stable"     : true,

    "autoload-dev"      : {
        "classmap" : ["tests"]
    },

    "config"            : {
        "optimize-autoloader" : true
    },

    "extra"             : {
        "branch-alias" : {
            "dev-master" : "3.0.x-dev"
        }
    }
}
