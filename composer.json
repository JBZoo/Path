{
    "name"              : "jbzoo/path",
    "type"              : "library",
    "description"       : "PHP virtual path library",
    "license"           : "MIT",
    "keywords"          : [
        "url",
        "jbzoo",
        "path",
        "realpath",
        "filesystem",
        "virtual path"
    ],

    "authors"           : [
        {
            "name"  : "Denis Smetannikov",
            "email" : "admin@jbzoo.com",
            "role"  : "lead"
        },
        {
            "name"  : "Sergey Kalistratov",
            "email" : "kalistratov.s.m@gmail.com"
        }
    ],

    "minimum-stability" : "dev",
    "prefer-stable"     : true,

    "require"           : {
        "php"         : "^8.1",

        "jbzoo/utils" : "^7.1",
        "jbzoo/data"  : "^7.1"
    },

    "require-dev"       : {
        "jbzoo/toolbox-dev" : "^7.1"
    },

    "autoload"          : {
        "psr-4" : {"JBZoo\\Path\\" : "src"}
    },

    "autoload-dev"      : {
        "psr-4" : {"JBZoo\\PHPUnit\\" : "tests"}
    },

    "config"            : {
        "optimize-autoloader" : true,
        "allow-plugins"       : {"composer/package-versions-deprecated" : true}
    },

    "extra"             : {
        "branch-alias" : {
            "dev-master" : "7.x-dev"
        }
    }
}
